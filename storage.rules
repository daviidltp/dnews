rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para la carpeta articles
    match /articles/{allPaths=**} {
      // Permitir lectura a todos los usuarios (para mostrar imágenes)
      allow read: if true;
      
      // Permitir escritura a todos los usuarios (para subir imágenes)
      // Con validaciones básicas de seguridad
      allow write: if 
        request.resource.size < 10 * 1024 * 1024 && // Máximo 10MB
        request.resource.contentType.matches('image/.*') && // Solo imágenes
        request.resource.name.matches('article_.*\\.jpg'); // Solo archivos de artículos
    }
    
    // Denegar acceso a cualquier otra ruta por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
